<div class='container px-5 px-sm-0 admin_chat_group_show'>
  <h2>チャットグループ</h2>
  <table class='table table-inverse mt-5'>
    <thead>
      <tr>
        <th style="width: 150px;">グループ名</th>
        <th style="width: 400px;">紹介文</th>
        <th style="width: 150px;">メンバー</th>
        <th style="width: 50px;"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @chat_group.name %></td>
        <td><%= @chat_group.introduction %></td>
        <td>
          <% @chat_group.saunners.each do |member| %>
            <%= member.nickname %>
          <% end %>
        </td>
        <td><%= link_to '削除', admin_chat_group_all_destroy_path(@chat_group), method: :delete,data: { confirm: '本当に削除しますか？' } , class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
    </tbody>
  </table>
</div>