<div class='col-md-8 offset-md-1'>
      <h2>チャットグループ一覧</h2>
      <table class='table table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @chat_groups.each do |group| %>
            <tr>
              <td></td>
              <td><%= link_to group.name, chat_group_path(group) %></td>
              <td><%= group.introduction %></td>
              <td><%= group.saunners.count %></td>
              <td>
                <% if group.owner_id == current_saunner.id %>
                  <%= link_to '編集', edit_chat_group_path(group), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <%= group.saunner ? group.saunner.name : "不明" %>が
                <i class="far fa-clock"><%=group.created_at.strftime('%Y/%m/%d') %>に作成</i>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>