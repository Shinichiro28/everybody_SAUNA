<div class="row pt-5 pl-3">
    <div class="col">
    <% @new_posts.each do |post| %>
    <% @saunners.each do |saunner| %>
    <% @saunas.each do |sauna| %>
      <div class="card" style="width: 300px; height: 350px">
      <%= image_tag post.get_sauna_image, width: '100%', height: '50%' %>
        <div class="card-body">
          <table>
            <thead>
              <tr>
                <td style="font-size: small;">
                <%= saunner.nickname %>
                </td>
              </tr>
              <tr>
                <th>
                 <a style="color: blue; clamp(1px, 18px, 18px);"><%= sauna.name %></a><br>
                 <a style="color: gray; font-size: small;">[<%= sauna.prefecture %>]</a>
                </th>
              </tr>
            </thead>
            <tbody style="font-size: small;">
              <tr>
                <td>サウナ室温度：<%= post.sauna_temperature %>℃</td>
                <td class="pl-3">水風呂温度：<%= post.mizu_temperature %>℃</td>
              </tr>
              <tr>
                <td>サウナ時間：<%= post.sauna_minutes %>分</td>
                <td class="pl-3">水風呂時間：<%= post.mizu_minutes %>分</td>
              </tr>
              <tr>
                <td>ととのい時間：<%= post.totonoi_minutes %>分</td>
                <td class="pl-3">セット数：<%= post.sauna_times %>回</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
  <% end %>
  </div>
</div>
