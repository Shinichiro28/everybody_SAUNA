<div class="px-5 px-sm-0 mt-5 product">
  <div class="text-right mr-5">
    <%= link_to cart_products_path, class: "btn btn-outline-success" do %>
      <i class="fas fa-shopping-cart"></i>
      <p><small>カートの中を見る</small></p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to "全て", products_path, class: "text-black-50"  %></td>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, products_path(name: genre.id), class: "text-black-50" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-md-10">
      <div class="ml-5">
        <h2>商品一覧</h2>
        <div class="mt-3 row no-padding card-wrapper">
          <% @products.each do |product| %>
            <%= link_to product_path(product.id) do %>
            <div class="card w-25 shadow-lg ml-5">
              <%= image_tag product.product_image, size: "200x150" %>
            </div>
            <div class="card-body ml-5">
              <p class="card-text"><%= product.name %></p>
              <p class="card-text"><%= product.price.to_s(:delimited) %></p>
            </div>
            <% end %>
          <% end %>
        </div>
        <div class="pagination text-center mt-3"><%= paginate @products %></div>
      </div>
    </div>
  </div>
</div>
