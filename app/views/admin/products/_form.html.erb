<%= form_with model: product, url: {controller: 'admin/products', action: 'create'} do |f| %>
<div class="pt-5">
  <div class="form-group row">
    <%= f.label :product_image, "商品画像", class: "col-md-2" %>
    <%= f.file_field :product_image, class: "col-md-4", accept: 'image/*' %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "商品名", class: "col-md-2" %>
    <%= f.text_field :name, class: "col-md-4" %>
  </div>
  <div class="form-group row">
    <%= f.label :introduction, "商品説明", class: "col-md-2" %>
    <%= f.text_area :introduction, class: "col-md-4", size: "100x10", placeholder: "ここに説明文を記述します" %>
  </div>
  <div class="form-group row">
    <%= f.label :name, "ジャンル", class: "col-md-2" %>
    <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: '選択してください'} %>
  </div>
  <div class="form-group row">
    <%= f.label :price, "税抜価格", class: "col-md-2" %>
    <%= f.text_field :price, class: "col-md-2", placeholder: "1,000" %>円
  </div>
  <div class="form-group row">
    <%= f.label :is_active, "販売ステータス", class: "col-md-2" %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中", {value: true, style: "display: inline-block;"} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中", {value: false, style: "display: inline-block;"} %>
  </div>
  <div class="pl-5 pt-3">
    <%= f.submit "登録" , class: "btn btn-sm btn-outline-success col-md-offset-6 ml-5" %>
  </div>
</div>
<% end %>