<div class='container px-5 px-sm-0'>
  <h2 class="mt-5">注文履歴一覧</h2>
  <table class="table table-hover mt-3">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr onclick='window.location="<%= '/admin/orders/' + order.id.to_s %>"' role="link">
        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= order.saunner.last_name + order.saunner.first_name %></td>
        <td><%= order.order_products.all.sum(:quantity) %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="text-center pagination"><%= paginate @orders %></div>
</div>