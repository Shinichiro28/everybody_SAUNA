<div class='container px-5 px-sm-0'>
  <div class='col-md-12'>
    <div class="mb-5">
      <h2><i class="fas fa-pen-nib"></i> 施設登録</h2>
    </div>
    <%= render "/layouts/errors", obj: @sauna %>

    <%= form_with model: @sauna, url: {controller: 'public/saunas'} do |f| %>
    <div>
      <h3>基本情報</h3>
      <div class="form-group row">
        <%= f.label :name, "施設名", class: "col-md-3" %>
        <%= f.text_field :name, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :store_type, "施設タイプ", class: "col-md-3" %>
        <%= f.select(:store_type, ["温浴施設", "ホテル・旅館", "スポーツジム", "キャンプ場"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :target, "利用対象", class: "col-md-3" %>
        <%= f.select(:target, ["男性・女性", "男性のみ", "女性のみ"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :swap, "男湯・女湯入れ替え制", class: "col-md-3" %>
        <%= f.select(:swap, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :prefecture, "都道府県", class: "col-md-3" %>
        <%= f.select(:prefecture, ["北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :postcode, "郵便番号", class: "col-md-3" %>
        <%= f.text_field :postcode, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :address, "住所", class: "col-md-3" %>
        <%= f.text_field :address, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :tel, "電話番号", class: "col-md-3" %>
        <%= f.text_field :tel, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :hp, "HP", class: "col-md-3" %>
        <%= f.text_field :hp, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :access, "アクセス", class: "col-md-3" %>
        <%= f.text_area :access, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :holiday, "定休日", class: "col-md-3" %>
        <%= f.text_area :holiday, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :open, "営業時間", class: "col-md-3" %>
        <%= f.text_area :open, class: "col-md-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :fee, "料金", class: "col-md-3" %>
        <%= f.text_field :fee, class: "col-md-2" %>
      </div>
    </div>
    <div class="pt-5">
      <h3>サウナ室</h3>
      <div class="form-group row">
        <%= f.label :stove, "施設タイプ", class: "col-md-3" %>
        <%= f.select(:stove, ["遠赤外線", "対流式(ストーン)", "格納式(ボナサウナ,座面,壁)"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :heat_source, "熱源", class: "col-md-3" %>
        <%= f.select(:heat_source, ["電気", "ガス", "薪"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :sauna_temperature, "温度", class: "col-md-3" %>
        <%= f.text_field :sauna_temperature, class: "col-md-1" %>℃
      </div>
      <div class="form-group row">
        <%= f.label :sauna_capacity, "収容人数", class: "col-md-3" %>
        <%= f.text_field :sauna_capacity, class: "col-md-1" %>人
      </div>
      <div class="form-group row">
        <%= f.label :tv, "TV", class: "col-md-3" %>
        <%= f.select(:tv, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :complement, "補足", class: "col-md-3" %>
        <%= f.text_area :complement, class: "col-md-2" %>
      </div>
    </div>

    <div class="pt-5">
      <h3>水風呂</h3>
      <div class="form-group row">
        <%= f.label :mizu_temperature, "温度", class: "col-md-3" %>
        <%= f.text_field :mizu_temperature, class: "col-md-1" %>℃
      </div>
      <div class="form-group row">
        <%= f.label :mizu_capacity, "収容人数", class: "col-md-3" %>
        <%= f.text_field :mizu_capacity, class: "col-md-1" %>人
      </div>
      <div class="form-group row">
        <%= f.label :depth, "水深", class: "col-md-3" %>
        <%= f.text_field :depth, class: "col-md-1" %>m
      </div>
      <div class="form-group row">
        <%= f.label :vibra, "バイブラ", class: "col-md-3" %>
        <%= f.select(:vibra, ["○", "×"]) %>
      </div>
    </div>

    <div class="pt-5">
      <h3>ととのいスペース</h3>
      <div class="form-group row">
        <%= f.label :break_space, "ととのいスペース", class: "col-md-3" %>
        <%= f.select(:break_space, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :air_bath, "外気浴", class: "col-md-3" %>
        <%= f.select(:air_bath, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :chair, "椅子の種類", class: "col-md-3" %>
        <%= f.select(:chair, ["イス", "ベンチ", "デッキチェア"]) %>
      </div>
     <div class="form-group row">
        <%= f.label :chair_quantity, "椅子の数", class: "col-md-3" %>
        <%= f.text_field :chair_quantity, class: "col-md-1" %>個
      </div>
    </div>

    <div class="pt-5">
      <div class="form-group row">
        <%= f.label :aufguss, "アウフグース", class: "col-md-3" %>
        <%= f.select(:aufguss, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :aufguss_frequency, "頻度", class: "col-md-3" %>
        <%= f.text_area :aufguss_frequency, class: "col-md-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :auto_loyly, "オートロウリュ", class: "col-md-3" %>
        <%= f.select(:auto_loyly, ["○", "×"]) %>
      </div>
      <div class="form-group row">
        <%= f.label :auto_loyly_frequency, "頻度", class: "col-md-3" %>
        <%= f.text_area :auto_loyly_frequency, class: "col-md-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :self_loyly, "セルフロウリュ", class: "col-md-3" %>
        <%= f.select(:self_loyly, ["○", "×"]) %>
      </div>
    </div>

    <div class="pt-5">
      <h3>館内設備</h3>
      <div>
        <span>
          <%= f.label :inside_break_space, "休憩スペース", class: "col-md-3" %>
          <%= f.select(:inside_break_space, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :wi_fi, "Wi-fi", class: "col-md-3" %>
          <%= f.select(:wi_fi, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :supply, "電源", class: "col-md-3" %>
          <%= f.select(:supply, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :work_space, "作業スペース", class: "col-md-3" %>
          <%= f.select(:work_space, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :restaurant, "食事処", class: "col-md-3" %>
          <%= f.select(:restaurant, ["○", "×"]) %>
        <span>
          <%= f.label :parking, "駐車場", class: "col-md-3" %>
          <%= f.select(:parking, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :dispenser, "給水器", class: "col-md-3" %>
          <%= f.select(:dispenser, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :oropo, "オロポ", class: "col-md-3" %>
          <%= f.select(:oropo, ["○", "×"]) %>
      </div>
      <div>
        <span>
          <%= f.label :tattoo, "タトゥー可", class: "col-md-3" %>
          <%= f.select(:tattoo, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :shampoo, "シャンプー", class: "col-md-3" %>
          <%= f.select(:shampoo, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :conditioner, "コンディショナー", class: "col-md-3" %>
          <%= f.select(:conditioner, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :bodysoap, "ボディソープ", class: "col-md-3" %>
          <%= f.select(:bodysoap, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :facesoap, "フェイスソープ", class: "col-md-3" %>
          <%= f.select(:facesoap, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :razor, "カミソリ", class: "col-md-3" %>
          <%= f.select(:razor, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :toothbrush, "歯ブラシ", class: "col-md-3" %>
          <%= f.select(:toothbrush, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :nylon_towell, "ナイロンタオル", class: "col-md-3" %>
          <%= f.select(:nylon_towell, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :hairdryer, "ドライヤー", class: "col-md-3" %>
          <%= f.select(:hairdryer, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :facetowell, "フェイスタオル", class: "col-md-3" %>
          <%= f.select(:facetowell, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :bathtowell, "バスタオル", class: "col-md-3" %>
          <%= f.select(:bathtowell, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :pants, "サウナパンツ", class: "col-md-3" %>
          <%= f.select(:pants, ["○", "×"]) %>
        </span>
      </div>
      <div>
        <span>
          <%= f.label :saunamat, "サウナマット", class: "col-md-3" %>
          <%= f.select(:saunamat, ["○", "×"]) %>
        </span>
        <span>
          <%= f.label :saunaboard, "ビート板", class: "col-md-3" %>
          <%= f.select(:saunaboard, ["○", "×"]) %>
        </span>
       </div>
    </div>

    <div class="pt-5">
      <h3>補足事項</h3>
      <div class="form-group row">
          <%= f.label :free_text, "その他", class: "col-md-3" %>
          <%= f.text_area :free_text, class: "col-md-3" %>
      </div>
      <div class="actions m-2 pull-right">
            <%= f.submit "新規登録" , class: "btn btn-outline-success col-md-offset-6" %>
      </div>
    </div>
    <% end %>
  </div>
</div>