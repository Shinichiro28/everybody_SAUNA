<div class="container px-5 px-sm-0 shipping_addresses">
  <h2 class="mt-3">配送先登録/一覧</h2>
  <%= form_with model: @shipping_address do |f| %>
    <div class="mt-5 form_group">
      <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-md-4" %>
      <%= f.text_field :postcode, placeholder: "0000000", class: "col-md-2" %>
    </div>
    <div class="form_group">
      <%= f.label :address, "住所", class: "col-md-4" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-5" %>
    </div>
    <div class="form_group">
      <%= f.label :name, "宛名", class: "col-md-4" %>
      <%= f.text_field :name, placeholder: "令和道子", class: "col-md-2 mr-5" %>
      <%= f.submit "新規作成", class: "btn btn-outline-success ml-5" %>
    </div>
  <% end %>
  <table class="mt-5 table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shipping_addresses.each do |f| %>
      <tr>
        <td><%= f.postcode %></td>
        <td><%= f.address %></td>
        <td><%= f.name %></td>
        <td><%= link_to "編集", edit_shipping_address_path(f), class: "btn btn-sm btn-outline-success" %></td>
        <td><%= link_to "削除", shipping_address_path(f), method: :delete, class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
