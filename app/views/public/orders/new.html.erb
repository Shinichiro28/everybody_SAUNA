<div class="container px-5 px-sm-0 new_order">
  <h2 class="mt-5 ml-5">注文情報入力</h2>
  <h5 class="mt-3">支払方法</h5>
  <div class="ml-5">
    <%= form_with model: @order, url: confirm_path, method: :post do |f| %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>
  <h5 class="mt-3">お届け先</h5>
  <div class="ml-5">
    <%= f.radio_button :select_address, 0 %>
    <%= f.label :select_address_0, "登録済み住所から選択" %>
    <div class="form_group">
      <%= f.select :address_id, options_from_collection_for_select(current_saunner.shipping_addresses.all, :id, :address_display) %>
    </div>
    <%= f.radio_button :select_address, 1 %>
    <%= f.label :select_address_1, "新しいお届け先" %>
    <div class="form_group">
      <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-md-4" %>
      <%= f.text_field :postcode, placeholder: "0000000", class: "col-md-2" %>
    </div>
    <div class="form_group">
      <%= f.label :address, "住所", class: "col-md-4" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-5" %>
    </div>
    <div class="form_group">
      <%= f.label :name, "宛名", class: "col-md-4" %>
      <%= f.text_field :name, placeholder: "令和道子", class: "col-md-2" %>
    </div>
  </div>
    <div class="mt-3 text-center">
      <%= f.submit "確認画面へ進む", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>
