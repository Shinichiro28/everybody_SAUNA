<div class="container px-5 px-sm-0 edit_shipping_address">
  <h2 class="mt-3">配送先編集</h2>
  <%= form_with model: @shipping_address do |f| %>
    <div class="mt-5 form_group">
      <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-md-4" %>
      <%= f.text_field :postcode, class: "col-md-2" %>
    </div>
    <div class="mt-3 form_group">
      <%= f.label :address, "住所", class: "col-md-4" %>
      <%= f.text_field :address, class: "col-md-5" %>
    </div>
    <div class="mt-3 form_group">
      <%= f.label :name, "宛名", class: "col-md-4" %>
      <%= f.text_field :name, class: "col-md-2 mr-5" %>
      <%= f.submit "登録", class: "btn btn-outline-success ml-5" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "≤一覧に戻る", shipping_addresses_path %>
  </div>
</div>
