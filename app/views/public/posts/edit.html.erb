<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>サ活編集</h2>
    <%= render "/layouts/errors", obj: @post %>
    <%= form_with model: @post, url: {controller: 'public/posts', action: 'update'} do |f| %>
  </div>
  <div>
    <h3 class="container"><%= @sauna.name %></h3>
    <%= form_with model: @post, url: {controller: 'public/posts', action: 'update'} do %>
      <%= render 'form' %>
      <div class="actions m-2 pull-right">
        <%= f.submit "編集更新" , class: "btn btn-outline-success col-md-offset-6" %>
      </div>
    <% end %>
  </div>
</div>