<div class="container">
  <h3>コメント一覧</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>投稿id</th>
        <th>コメント</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
      <tr onclick='window.location="<%= '/admin/comments/' + comment.id.to_s %>"' role="link">
        <td><%= comment.saunner.nickname %></td>
        <td><%= comment.post.id %></td>
        <td><%= comment.comment %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="pagination"><%= paginate @comments %></div>
</div>