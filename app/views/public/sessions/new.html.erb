<div class='container sessions'>
  <div class='row'>
    <div class='col-md-12'>

      <h2 class="m-3">ログイン</h2>
      <p class="mt-3">会員の方はこちらからログイン</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field m-2 form-inline">
          <%= f.label :email, "メールアドレス", class: "col-md-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
        </div>

        <div class="field m-2 form-inline">
          <%= f.label :password, "パスワード", class: "col-md-2" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field m-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを保存します" %>
          </div>
        <% end %>

        <div class="actions m-2">
          <%= f.submit "ログイン", class: "btn btn-outline-success" %>
        </div>
      <% end %>

        <div class="row m-3">
          <%= link_to 'ゲストログイン（閲覧用）', saunners_guest_sign_in_path, class: "btn btn-secondary btn-sm col-md-4 btn-block mb-3 sign_in", method: :post %>
        </div>

    <h4 class="mt-5">会員登録がお済みでない方</h4>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>
