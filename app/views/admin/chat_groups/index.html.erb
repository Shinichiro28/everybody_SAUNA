<div class='col-md-8 offset-md-1'>
      <h2>チャットグループ一覧</h2>
      <div class="mt-4">
      </div>
      <table class='table table-inverse mt-4'>
        <thead>
          <tr>
            <th></th>
            <th style="width: 150px;">グループ名</th>
            <th class="chat_group_introduction_title" style="width: 400px;">グループ説明</th>
            <th>参加人数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @chat_groups.each do |group| %>
            <tr>
              <td></td>
              <td><%= link_to group.name, admin_chat_group_path(group) %></td>
              <td class="chat_group_introduction"><%= group.introduction %></td>
              <td><%= group.saunners.count %>人</td>
              <td>
                <%= group.saunner ? group.saunner.nickname : "不明" %>さんが<%= group.created_at.strftime('%Y/%m/%d') %>に作成
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination"><%= paginate @chat_groups %></div>
    </div>