<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="pt-5">いいねした投稿</h2>
        <table class="table table-hover mt-5">
          <thead>
            <tr>
              <th>投稿者名</th>
              <th>施設名</th>
              <th>投稿日</th>
            </tr>
          </thead>
          <% @favorite_posts.each do |post| %>
          <tbody>
            <tr onclick='window.location="<%= sauna_post_path(post.sauna.id, post.id) %>"' role="link">
              <td><%= post.saunner.nickname %></td>
              <td><%= post.sauna.name %></td>
              <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
          </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>