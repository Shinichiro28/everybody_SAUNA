<div class='container px-5 px-sm-0 saunner-edit'>
  <div class='row'>
    <div class='col-md-12'>
      <div class="mb-5">
        <h2><i class="fas fa-pen-nib"></i> 会員情報編集</h2>
      </div>
      <%= render "/layouts/errors", obj: @saunner %>
      <%= form_with model: @saunner, url: {controller: 'public/saunners', action: 'update'} do |f| %>

        <div class="form-group">
          <%= f.label :image, "プロフィール画像", class: "col-md-3" %>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>

        <div class="form-group row">
          <div class="col-md-2">名前</div>
            <%= f.label :last_name, "(姓)", class: "col-md-1" %>
            <%= f.text_field :last_name, autofocus: true, class: "col-md-2" %>
            <%= f.label :first_name, "(名)", class: "col-md-1" %>
            <%= f.text_field :first_name, class: "col-md-2" %>
          </div>

        <div class="form-group row">
          <%= f.label :nickname, "サウナーネーム", class: "col-md-3" %>
          <%= f.text_field :nickname, class: "col-md-2" %>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス",class: "col-md-3" %><br />
          <%= f.email_field :email, autocomplete: "email",class: "col-md-2" %>
        </div>

        <div class="actions m-2 pull-right">
          <%= f.submit "編集内容を保存" , class: "btn btn-outline-success col-md-offset-6" %>
          <%= link_to "退会する", unsubscribe_path, class: "btn btn-outline-danger" %>
        </div>

      <% end %>

    </div>
  </div>
</div>