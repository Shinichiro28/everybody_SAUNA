<div class='container px-5 px-sm-0'>
  <div class='col-md-12'>
    <div class="mb-5">
      <h2><i class="fas fa-pen-nib"></i> 施設登録</h2>
    </div>
    <%= render "/layouts/errors", obj: @sauna %>
    <%= form_with model: @sauna, url: {controller: 'public/saunas', action: 'create'} do |f| %>
      <%= render 'form' %>
      <div class="actions m-2 pull-right">
        <%= f.submit "新規登録" , class: "btn btn-outline-success col-md-offset-6" %>
      </div>
    <% end %>
  </div>
</div>