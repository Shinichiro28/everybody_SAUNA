<div class="container-fluid pt-5 pl-3">
  <div class="row">
    <% @new_posts.each do |post| %>
    <%= link_to sauna_post_path(post.sauna.id, post.id) do %>
    <div class="col mb-3">
      <div class="card shadow" style="width: 18rem;">
        <%= image_tag post.get_sauna_image, size: "286x180" %>
        <div class="card-body">
          <table>
            <thead>
              <tr>
                <td style="font-size: small;">
                <%= post.saunner.nickname %>さん
                </td>
              </tr>
              <tr>
                <th>
                 <a class="omit top_post_tiile"><%= post.sauna.name %></a><br>
                 <a style="color: gray; font-size: small;">[<%= post.sauna.prefecture %>]</a>
                </th>
                <th><%= post.favorites.count %>❤️ <%= post.comments.count %><i class="far fa-comment"></i></th>
              </tr>
            </thead>
            <tbody style="font-size: small;">
              <tr>
                <td>サウナ室：<%= post.sauna_temperature %>℃</td>
                <td class="pl-3">水風呂：<%= post.mizu_temperature %>℃</td>
              </tr>
              <tr>
                <td>サウナ時間：<%= post.sauna_minutes %>分</td>
                <td class="pl-3">水風呂時間：<%= post.mizu_minutes %>分</td>
              </tr>
              <tr>
                <td>ととのい時間：<%= post.totonoi_minutes %>分</td>
                <td class="pl-3">セット数：<%= post.sauna_times %>回</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
  </div>
</div>
