<div class='container mypage'>
  <div class='row'>
    <div class='col-md-12'>
      <h1 class="mb-4"><i class="fas fa-child"></i> マイページ</h1>
        <div class="mb-4 d-flex">
          <h5 class="mt-2 mr-3">登録情報</h5>
          <% if @saunner.nickname != "guestsaunner" %>
            <div><%= link_to "編集する", edit_saunners_path, class: "btn btn-sm btn-outline-success" %></div>
          <% end %>
          <div class="ml-5"><%= link_to "注文履歴一覧", orders_path, class: "btn btn-sm btn-outline-primary" %></div>
        </div>
      <table class="table table-hover">
        <tr>
          <td><%= image_tag @saunner.get_profile_image, size:'50x50' %></td>
          <td></td>
        </tr>
        <tr>
          <th style="width: 30%">氏名</th>
          <td><%= @saunner.last_name %>　<%= @saunner.first_name %></td>
        </tr>
        <tr>
          <th>サウナーネーム</th>
          <td><%= @saunner.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @saunner.email %></td>
        </tr>
      </table>

      <%= link_to "いいねした投稿をを見る", favorites_path(@saunner) %>
    </div>
  </div>
</div>