<%= form_with model: chat_group, local: true do |f| %>
  <div class="form-group mt-3">
    <%= f.label :チャットグループ名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :チャットグループ説明 %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit class: 'btn btn-outline-info ' %>
  </div>
<% end %>