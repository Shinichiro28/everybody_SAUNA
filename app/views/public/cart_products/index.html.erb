<div class="container px-5 px-sm-0">
  <div class="mt-5 row">
    <h2 class="col text-left">ショッピングカート</h2>
    <div class="col text-right">
      <%= link_to "カートを空にする", cart_product_destroy_all_path(current_saunner.cart_products), method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
  <%= render "cart", cart_products: @cart_products %>
  <div class="mt-3 row">
    <div class="col">
      <%= link_to "買い物を続ける", products_path, class: "btn btn-sm btn-outline-primary" %>
    </div>
    <div class="col">
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th>
          <td>¥<%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <% if @cart_products.exists? %>
    <div class="d-flex justify-content-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-sm btn-outline-success" %>
    </div>
  <% end %>
</div>