<div class="container">
  <div class='row'>
    <div class='col-md-12'>

      <h2 class="m-3">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :image, "プロフィール画像", class: "col-md-3" %>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>

        <div class="form-group row">
          <div class="col-md-2"><%= f.label :last_name,"名前" %></div>
            <%= f.label :last_name, "(姓)", class: "col-md-1" %>
            <%= f.text_field :last_name, autofocus: true, class: "col-md-2" %>
            <%= f.label :first_name, "(名)", class: "col-md-1" %>
            <%= f.text_field :first_name, class: "col-md-2" %>
        </div>

        <div class="form-group row">
          <%= f.label :nickname, "サウナーネーム",class: "col-md-3" %><br />
          <%= f.text_field :nickname, class: "col-md-2" %>
        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス",class: "col-md-3" %><br />
          <%= f.email_field :email, autocomplete: "email",class: "col-md-2" %>
        </div>

        <div class="form-group row">
          <div class="col-md-3">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %><br />
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-2" %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-md-3" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-2" %>
        </div>

        <div class="actions m-2">
          <%= f.submit "新規登録", class: "btn btn-outline-success col-md-offset-6" %>
        </div>
      <% end %>

      <h4 class="mt-5">既に登録済みの方</h4>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>