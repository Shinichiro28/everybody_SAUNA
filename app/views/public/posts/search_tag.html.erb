<div class="container post_search_tag">
  <h2 class="mt-5">タグが<strong><%=@tag.name%></strong>の投稿一覧</h2>
  <!--タグリスト-->
  <div class="mt-3 p-3" style="background-color: #c0c0c0;">
    <% @tag_list.each do |list|%>
      <%=link_to list.name,sauna_post_search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>
    <%= paginate @tag_list %>
  </div>
  <% @posts.each do |post| %>
    <%=link_to sauna_post_path(@sauna.id, post.id) do %>
    <div class="card mb-3 mt-5" style="width: 1000px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%#= image_tag post.get_sauna_image, size: '300x300' %>
        </div>
        <div class="col-md-8" style="padding-left: 100px;">
          <div class="card-body">
            <table>
              <tr>
                <th class="pr-2"><%= post.saunner.nickname %>さん
                <small class="text-muted" style="font-size: small;">訪問日時：<%= post.visit_date %></small></th>
              </tr>
              <tr>
                <th class="pr-2"><%= @sauna.name %><small class="text-muted"><%= @sauna.prefecture %></small></th>
              </tr>
              <tr>
                <td class="pr-2 pt-3">サウナ室温度：<%= post.sauna_temperature %>℃</td>
                <td class="pl-3 pt-3">水風呂温度：<%= post.mizu_temperature %>℃</td>
              </tr>
              <tr>
                <td class="pr-2">サウナ時間：<%= post.sauna_minutes %>分</td>
                <td class="pl-3">水風呂時間：<%= post.mizu_minutes %>分</td>
                <td class="pl-3">ととのい時間：<%= post.totonoi_minutes %>分</td>
              </tr>
              <tr>
                <td class="pr-2">セット数：<%= post.sauna_times %>回</th>
              </tr>
            </table>
            <p class="pt-3" style="font-size: small;">サ活内容</p>
            <p class="omit"><%= post.sauna_post %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <div class="pagination pagination-sm justify-content-center">
    <%= paginate @posts %>
  </div>
</div>